#!/bin/sh -efu

while read name geom; do
  [ -n "${name%%*#}" ] || continue

  if [ -n "$1" ]; then
    [ "$1" = "$name" ] || continue
  fi

  echo "<<$name>>"
#  ./srtm_pic 1e-5 200 $geom 50 50 > $name.pnm
  ./srtm_pic 1e-5 200 $geom 10 10 > $name.pnm
  pnmquant 255 < $name.pnm | pnmtopng > $name.png
  rm -f $name.pnm
done <<EOF
  giss 69 436000 464000 4310000 4322000
  fany 69 424000 448000 4326000 4348000
