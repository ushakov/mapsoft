Import ('env')

progs =  Split("""
    mapsoft_convert
    mapsoft_mkmap
    mapsoft_ref
    mapsoft_toxyz
    mapsoft_map2fig
    mapsoft_srtm2fig
    mapsoft_fig2fig
    mapsoft_pano
    mapsoft_geofig

    convs_pt2pt
    convs_map2pt
    convs_nom
    mapsoft_vmap
    """)

for p in progs:
  env.Program(p + '.cpp')

env.Install(env.bindir, Split("""
  mapsoft_convert
  mapsoft_vmap
  mapsoft_geofig
  mapsoft_toxyz
  mapsoft_mkmap
  convs_pt2pt
  convs_map2pt
  convs_nom
"""))

env.SymLink("mapsoft_vmap", "vmap_copy", env.bindir)


