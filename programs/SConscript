Import ('env')
env_gtk = env.Copy()
env_comm = env.Copy()

mapsoft_libs = Split ("geo_io loaders utils jeeps")
other_libs   = Split ("usb tiff jpeg png gd")

env_gtk.Prepend(LIBS=[mapsoft_libs,other_libs])
env_gtk.ParseConfig('pkg-config --cflags --libs gtkmm-2.4,gthread-2.0')

env_comm.Prepend(LIBS=[mapsoft_libs,other_libs])


env_comm.Program('mapsoft_add2fig', 'mapsoft_add2fig.cpp')
env_comm.Program('mapsoft_convert', 'mapsoft_convert.cpp')
# le.Program('mapsoft_imgview', 'mapsoft_imgview.cpp')
env_comm.Program('mapsoft_mapcnv', 'mapsoft_mapcnv.cpp')
env_comm.Program('mapsoft_mapcnv1', 'mapsoft_mapcnv1.cpp')
env_comm.Program('mapsoft_getks.cpp',     LIBS=['curl', mapsoft_libs,other_libs])
env_comm.Program('mapsoft_getks_ll.cpp',  LIBS=['curl', mapsoft_libs,other_libs])
env_comm.Program('mapsoft_getks_nom.cpp',  LIBS=['curl', mapsoft_libs,other_libs])
env_comm.Program('mapsoft_getgoogle.cpp', LIBS=['curl', mapsoft_libs,other_libs])
env_comm.Program('mapsoft_mkmap.cpp')
env_comm.Program('mapsoft_ref.cpp')
env_comm.Program('mapsoft_toxyz.cpp')
env_comm.Program('mapsoft_map2fig.cpp', LIBS=['curl', mapsoft_libs,other_libs])
env_comm.Program('mapsoft_srtm2fig.cpp')
env_comm.Program('mapsoft_fig2fig.cpp')
env_comm.Program('mapsoft_calc_nom2ll.cpp')

env.Program(['fig_crop.cpp','../geo_io/fig.o'])


env_gtk.Program('mapsoft_mapview.cpp')

