env = Environment()

subdirs = Split ("libfig options utils lib2d")

env.Append (CCFLAGS=['-O2'])
env.Append (CPPPATH = ["../../core", "../libzn"])
env.Append (LIBPATH = map(lambda(s): "../../core/"+s, subdirs) )
env.Append (LIBPATH = ["../libzn", "."] )

env.Prepend(LIBS=Split ("fig options utils 2d"))

env.Program(['fig_old2new.cpp','zn_key.cpp'])

