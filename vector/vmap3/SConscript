Import ('env')
e = env.Clone()

e['ENV']['PKG_CONFIG_PATH'] = "../../core/pc"
e.ParseConfig('pkg-config --cflags --libs vmap')

e.Prepend(LIBS=["vmap_renderer"])
e.Library('vmap_renderer',\
  Split ("""
    vmap_rend_cnt.cpp
    vmap_rend_txt.cpp
    vmap_rend_pic.cpp
    vmap_renderer.cpp
  """))

e.Program("vmap_copy.cpp")
e.Program("vmap_render.cpp")
e.Program("vmap_mmb_filter.cpp")

