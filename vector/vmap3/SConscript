Import ('env')
e = env.Clone()

e.MLib('vmap_renderer',
       srcs = Split("""
                vmap_rend_cnt.cpp
                vmap_rend_txt.cpp
                vmap_rend_pic.cpp
                vmap_renderer.cpp
                """),
       deps = Split("""
                2d
                geo
                geo_io
                vmap
                cairo
                """))

e.MProg('vmap_copy',
        srcs = ['vmap_copy.cpp'],
        deps = ['vmap_renderer'])

e.MProg('vmap_render',
        srcs = ['vmap_render.cpp'],
        deps = ['vmap_renderer'])

e.MProg('vmap_mmb_filter',
        srcs = ['vmap_mmb_filter.cpp'],
        deps = ['vmap_renderer'])

