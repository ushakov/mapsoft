
mapsoft_libs=Split("vmap mp fig geo_io geo loaders utils options 2d")
other_libs=Split("proj png jpeg tiff yaml")

Import ('env_cairo')
e = env_cairo.Clone()
e.Prepend(LIBS=["vmap_renderer", mapsoft_libs,other_libs])

e.Library('vmap_renderer',\
  Split ("""
    vmap_rend_cnt.cpp
    vmap_rend_txt.cpp
    vmap_rend_pic.cpp
    vmap_renderer.cpp
  """))

e.Program("vmap_copy.cpp")
e.Program("vmap_render.cpp")
e.Program("vmap_mmb_filter.cpp")

