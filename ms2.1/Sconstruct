import os
SetOption('implicit_cache', 1)


subdirs = Split ("""libbase libgeo""")


# Base environment. No external Libs
env_base = Environment ()
env_base.Append (CCFLAGS=['-O2'])

env_base.Program('mapsoft_convert', 'mapsoft_convert.cpp')


Export('env_base')
SConscript (map (lambda(s): s+"/SConscript", subdirs))
