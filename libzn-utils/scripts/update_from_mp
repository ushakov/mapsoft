#!/bin/bash

VMAP="/home/sla/MS2/libzn-utils/mapsoft_vmap"

MAP="$1"
EDITOR="chupikin"
CONF="./conf"

MAP=${MAP%%.*} # cutting all extentions

if [ -z "$MAP" -o -z "$CONF" -o -z "$EDITOR" ]; then 
  echo "usage: $0 <MAP>"
  exit 1
fi

$VMAP keys   "$CONF" "$MAP" "$EDITOR" "$MAP".mp
$VMAP remove "$CONF" "$MAP".fig all
$VMAP copy   "$CONF" "$MAP".mp "$MAP".fig all
$VMAP labels "$CONF" "$MAP" "$MAP".fig
$VMAP pics   "$CONF" "$MAP".fig
