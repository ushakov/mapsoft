Import ('env')
le = env.Clone()

mapsoft_libs = Split ("geo_io geo loaders jeeps fig mp utils 2d")
other_libs   = Split ("usb tiff jpeg png gd curl proj")

le.Prepend(LIBS=["viewer",mapsoft_libs,other_libs])
le.ParseConfig('pkg-config --cflags --libs gtkmm-2.4,gthread-2.0')

le.Library("viewer", Split ("""
        generic_dialog.cpp
	action_manager.cpp
	../experimental/gred/rubber.cpp
	../experimental/gred/simple_viewer.cpp
	../experimental/gred/dthread_viewer.cpp
	../experimental/gred/gobj_solid_fill.cpp
	workplane.cpp
        """))

le.Program("mapsoft_mapview", "mapsoft_mapview.cpp")
#le.Program('mapsoft_googleview', "mapsoft_googleview.cpp")
#le.Program('mapsoft_ksview', "mapsoft_ksview.cpp")

