Import ('env')

e=env.Clone()
e['ENV']['PKG_CONFIG_PATH'] = "../core/pc"
e.ParseConfig('pkg-config --cflags --libs gred geo_io mp')

e.Library("viewer", Split ("""
        generic_dialog.cpp
	action_manager.cpp
	workplane.cpp
        """))
e.Prepend(LIBS=["viewer"])

e.Program("mapsoft_mapview.cpp")
